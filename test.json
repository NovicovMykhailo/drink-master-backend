{
	"openapi": "3.0.0",
	"info": {
		"title": "Cocktail Search API",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:3000"
		}
	],
	"paths": {
		"/api/search": {
			"get": {
				"summary": "Search cocktails by query",
				"tags": ["Cocktail Search"],
				"parameters": [
					{
						"name": "q",
						"in": "query",
						"description": "Search query",
						"required": false,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "category",
						"in": "query",
						"description": "Category filter",
						"required": false,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "ingredient",
						"in": "query",
						"description": "Ingredient filter",
						"required": false,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "page",
						"in": "query",
						"description": "Page number",
						"required": false,
						"schema": {
							"type": "integer",
							"default": 1
						}
					},
					{
						"name": "limit",
						"in": "query",
						"description": "Results per page",
						"required": false,
						"schema": {
							"type": "integer",
							"default": 9
						}
					}
				],
				"security": [
					{
						"Bearer": []
					}
				],
				"responses": {
					"200": {
						"description": "Successfully retrieved cocktails",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"count": {
											"type": "object",
											"properties": {
												"page": {
													"type": "integer"
												},
												"totalPages": {
													"type": "integer"
												},
												"total": {
													"type": "integer"
												}
											}
										},
										"data": {
											"type": "array",
											"items": {
												"$ref": "#/components/schemas/Cocktail"
											}
										}
									}
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized"
					},
					"500": {
						"description": "Internal Server Error"
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"Cocktail": {
				"type": "object",
				"properties": {
					"drink": {
						"type": "string"
					},
					"category": {
						"type": "string"
					},
					"glass": {
						"type": "string"
					},
					"instructions": {
						"type": "string"
					},
					"ingredients": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"favs": {
						"type": "array"
					},
					"drinkThumb": {
						"type": "string"
					}
				}
			}
		},
		"securitySchemes": {
			"BearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	}
}
